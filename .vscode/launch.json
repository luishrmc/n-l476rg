{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - MCU",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/app/freeRTOS.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "interface": "swd",
            "device": "STM32L476RG",
            "searchDir": [],
            "runToEntryPoint": "main",
            "preLaunchTask": "Compile - Debug",

            "svdFile": "${workspaceFolder}/utils/docs/stm32l4_svd/STM32L4_svd/STM32L4_svd_V1.4/STM32L476.svd",
            "rtos": "FreeRTOS",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "RTT",
                        "port": 0,
                        "type": "console"
                    }
                ]
            }
        }
    ]
}